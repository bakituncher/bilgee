rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================================
    // KULLANICI KOLEKSİYONU (/users) - GÜVENLİK DÜZELTMESİ
    // =====================================================================
    match /users/{userId} {
      // GÜVENLİK AÇIĞI KAPATILDI: Kullanıcılar sadece kendi özel verilerini okuyabilir.
      // Genel profil verileri (diğer kullanıcılar tarafından görülebilen) için /public_profiles koleksiyonu kullanılır.
      allow read: if request.auth.uid == userId;

      // NİHAİ GÜVENLİK GÜNCELLEMESİ: Genel 'write' izni, daha güvenli olan
      // 'create' ve 'update' izinleriyle değiştirildi.

      // Kullanıcı kendi profil belgesini oluşturabilir.
      allow create: if request.auth != null && request.auth.uid == userId;

      // =====================================================================
      // GÜNCELLEME İZNİ (SEKTÖR STANDARDI - BLACKLIST YAKLAŞIMI)
      // =====================================================================
      // Whitelist yerine, sadece DEĞİŞTİRİLMESİ YASAK olan alanları kontrol ediyoruz.
      // Bu sayede 'email', 'goal' gibi alanlar güncellenebilirken, kritik veriler korunur.
      // changedKeys(): Sadece değeri ESKİSİNDEN FARKLI olan alanları döndürür.
      // Eğer kullanıcı { isPremium: false } gönderirse ve sunucuda zaten false ise,
      // bu bir "değişiklik" sayılmaz ve izin verilir.
      allow update: if request.auth != null && request.auth.uid == userId &&
          (!request.resource.data.diff(resource.data).changedKeys()
            .hasAny([
              'isAdmin',          // Admin yetkisi çalınamaz
              'isPremium',        // Premium hilesi yapılamaz
              'premiumUntil',     // Süre uzatılamaz
              'engagementScore',  // Puan hilesi yapılamaz (Sunucu yönetir)
              'testCount',        // İstatistik bozulumaz
              'totalNetSum',      // Netler manipüle edilemez
              'streak',           // Seri hilesi yapılamaz
              'followerCount'     // Takipçi sayısı elle değiştirilemez (Cloud Function yapar)
            ]));

      // --- ALT KOLEKSİYONLAR ---
      match /stars/{day} {
        // Kullanıcı kendi yıldız bakiyesini okuyabilir.
        allow read: if request.auth.uid == userId;
        // İstemci bakiye oluşturamaz, güncelleyemez veya silemez.
        allow write: if false;
      }

      match /daily_quests/{questId} {
        // Yalnızca sahibi okuyabilir
        allow read: if request.auth.uid == userId;

        // İstemci GÖREVLERİ ASLA YAZAMAZ.
        // Tüm ilerleme ve ödül alımı sunucu fonksiyonları üzerinden yapılır.
        allow write: if false;
      }

      match /daily_usage/{date} {
        // Kullanıcı kendi günlük kullanım istatistiklerini okuyabilir
        allow read: if request.auth.uid == userId;
        // İstemci günlük kullanım verilerini yazamaz, sadece sunucu yazabilir
        allow write: if false;
      }

      match /state/{docId} {
        allow read: if request.auth.uid == userId;
        // ai_memory belgesi kullanıcı tarafından yazılabilir (AI sohbet hafızası için)
        // stats belgesi kullanıcı tarafından yazılabilir (deneme silme işlemleri için)
        // app_state belgesi kullanıcı tarafından yazılabilir (uygulama durumu için)
        // points belgesi SADECE sunucu tarafından yazılabilir
        allow write: if request.auth.uid == userId && (docId == 'ai_memory' || docId == 'stats' || docId == 'app_state');
      }

      match /archived_plans/{docId} {
        allow read, write: if request.auth.uid == userId;
      }

      match /plans/{docId} {
        allow read, write: if request.auth.uid == userId;
      }

      match /performance/{docId} {
        allow read, write: if request.auth.uid == userId;
        match /masteredTopics/{masteredTopicId} {
          allow read, write: if request.auth.uid == userId;
        }
      }

      match /topic_performance/{topicId} {
        allow read, write: if request.auth.uid == userId;
      }

      match /savedWorkshops/{workshopId} {
        allow read, write: if request.auth.uid == userId;
      }

      match /savedMindMaps/{mindMapId} {
        allow read, write: if request.auth.uid == userId;
      }

      match /user_activity/{activityId} {
        allow read, create: if request.auth.uid == userId;
        allow update: if request.auth.uid == userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['practiceVolume', 'focusMinutes', 'date', 'dateKey', 'updatedAt']);
        allow delete: if false;

        match /visits/{visitId} {
          allow read, create: if request.auth.uid == userId;
          allow update, delete: if false;
        }

        match /completed_tasks/{taskId} {
          allow read, create, delete: if request.auth.uid == userId;
          allow update: if false;
        }
      }

      match /devices/{deviceId} {
        allow read: if request.auth.uid == userId;
        allow create, update, delete: if false;
      }

      match /in_app_notifications/{notifId} {
        allow read: if request.auth.uid == userId;

        // DÜZELTME 1: Global kampanyalar veya eksik belgeler için 'create' izni eklendi.
        // Kullanıcı sadece 'read' alanını true olarak ayarlayarak belge oluşturabilir.
        allow create: if request.auth.uid == userId
          && request.resource.data.read == true;

        // DÜZELTME 2: 'resource.data.read == false' kontrolü KALDIRILDI.
        // Artık belge zaten okunmuş olsa bile tekrar okundu isteği gelirse hata vermez (Idempotency).
        allow update: if request.auth.uid == userId
          && request.resource.data.read == true
          && request.resource.data.diff(resource.data).changedKeys().hasOnly(['read','readAt']);

        allow delete: if request.auth.uid == userId;
      }

      match /followers/{followerId} {
        allow read, list: if request.auth != null;
        allow create: if request.auth != null && request.auth.uid == followerId;
        // Profil sahibi (userId) veya takipçi (followerId) silebilir
        allow delete: if request.auth != null && (request.auth.uid == followerId || request.auth.uid == userId);
      }

      match /following/{followingId} {
        allow read, list: if request.auth != null;
        allow create: if request.auth != null && request.auth.uid == userId;
        allow delete: if request.auth != null && request.auth.uid == userId;
      }

      match /saved_contents/{contentId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // =====================================================================
    // PUBLIC PROFILES - GÜVENLİK DÜZELTMESİ
    // =====================================================================
    match /public_profiles/{userId} {
      // Herkese açık profilleri tüm kullanıcılar okuyabilir.
      // NOT: Kayıt sırasında kullanıcı adı kontrolü yapılabilmesi için
      // anonim okuma izni gereklidir (kullanıcı henüz giriş yapmamış olabilir).
      allow read, list: if true;
      // Kullanıcılar kendi public profile'larını oluşturabilir ve güncelleyebilir
      allow create, update: if request.auth != null && request.auth.uid == userId;
      // Profillerin silinmesine istemci tarafından izin verilmez.
      allow delete: if false;
    }

    // =====================================================================
    // ESKİ LİDERLİK TABLOSU KOLEKSİYONU (/leaderboards) - KALDIRILDI
    // =====================================================================
    // Bu koleksiyon artık kullanılmıyor. Optimize edilmiş snapshot sistemi kullanılıyor.
    match /leaderboards/{examType}/users/{userId} {
      allow read, write: if false;
    }

    // =====================================================================
    // YENİ LİDERLİK TABLOSU YAPISI
    // =====================================================================
    // ESKİ: /leaderboard_top - Artık kullanılmıyor
    match /leaderboard_top/{examType}/{period}/{docId} {
      allow read, write: if false;
    }

    match /leaderboard_scores/{examType}/{kind}/{periodId} {
      allow read, write: if false;
      match /users/{userId} {
        allow read, write: if false;
      }
    }

    match /leaderboard_exams/{examType} {
      allow read, write: if false;
    }

    // YENİ: Liderlik tablosu anlık görüntüleri (optimize edilmiş)
    match /leaderboard_snapshots/{snapshotId} {
      // GÜVENLİK GÜNCELLEMESİ: Liderlik tablolarını yalnızca, kendi profillerinde
      // aynı sınav türünü seçmiş olan kullanıcılar okuyabilir.
      // `snapshotId` formatı: `{examType}_{period}` (örn: "TYT_daily").
      allow read, list: if request.auth != null &&
                           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.selectedExam == snapshotId.split('_')[0];
      allow write: if false; // Sadece sunucu yazmalı
    }

    // =====================================================================
    // TESTLER
    // =====================================================================
    match /tests/{testId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /focusSessions/{sessionId} {
      allow read, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    match /analytics_events/{eventId} {
      allow create: if request.auth.uid != null;
      allow read, update, delete: if false;
    }

    // =====================================================================
    // BLOG: /posts koleksiyonu
    // =====================================================================
    match /posts/{postId} {
      allow read: if resource.data.status == 'published' &&
                  resource.data.publishedAt is timestamp &&
                  resource.data.publishedAt <= request.time;
      allow list: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // ======================
    // SORU BİLDİRİMLERİ
    // ======================
    match /questionReports/{reportId} {
      // FİNANSAL GÜVENLİK GÜNCELLEMESİ:
      // İstemcilerin doğrudan yazma (create) yetkisi kaldırıldı.
      // Raporlar artık YALNIZCA 'reports-submitQuestionReport'
      // isimli, hız limiti olan (rate-limited) callable function
      // üzerinden oluşturulabilir.
      allow create: if false; // ESKİ: if request.auth != null;

      // Admin okuma/silme kuralları değişmedi
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    match /question_report_index/{docId} {
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow write: if false;
    }

    // ======================
    // PUSH KAMPANYALARI
    // ======================
    match /push_campaigns/{campaignId} {
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow write: if false;
      match /logs/{logId} {
        allow read: if request.auth != null && request.auth.token.admin == true;
        allow write: if false;
      }
    }

    // ======================
    // PROMPTS
    // ======================
    match /prompts/{promptId} {
      allow read, list: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // ======================
    // APP CONFIG
    // ======================
    match /app_config/{configId} {
      // Herkes okuyabilir (versiyon kontrolü için)
      allow read: if true;
      // Sadece adminler yazabilir
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // =====================================================================
    // CONFIGURATION (/config)
    // =====================================================================
    match /config/{docId} {
      // Bu koleksiyona istemci tarafından erişilemez.
      // Sadece sunucu (admin SDK) erişebilir.
      allow read, write: if false;
    }

    // =====================================================================
    // ADMIN LOGS (/admin_logs)
    // =====================================================================
    match /admin_logs/{logId} {
      // Sadece adminler okuyabilir.
      allow read: if request.auth != null && request.auth.token.admin == true;
      // İstemci tarafından yazılamaz.
      allow write: if false;
    }

    // =====================================================================
    // KULLANICI ENGELLEME SİSTEMİ
    // =====================================================================
    // users/{userId}/blocked_users/{blockedUserId}
    match /users/{userId}/blocked_users/{blockedUserId} {
      // Kullanıcı kendi engelleme listesini okuyabilir
      allow read, list: if request.auth != null && request.auth.uid == userId;
      // Kullanıcı başka birini engelleyebilir (cloud function üzerinden)
      allow create: if false; // Cloud function kullanılmalı
      // Kullanıcı engelini kaldırabilir
      allow delete: if request.auth != null && request.auth.uid == userId;
      allow update: if false;
    }

    // =====================================================================
    // KULLANICI RAPORLAMA SİSTEMİ
    // =====================================================================
    match /user_reports/{reportId} {
      // GÜVENLIK: Raporlar sadece cloud function üzerinden oluşturulabilir
      // Rate limiting ve abuse prevention için
      allow create: if false;
      // Admin okuma/güncelleme/silme yetkileri
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Raporlama indeksi (moderasyon için)
    match /user_report_index/{userId} {
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow write: if false;
    }

    // =====================================================================
    // GLOBAL KAMPANYALAR (PULL MODEL BİLDİRİMLER)
    // =====================================================================
    // Admin tarafından oluşturulan global kampanyalar
    // Kullanıcılar okuyabilir, ancak yazamaz (sunucu tarafından yönetilir)
    match /global_campaigns/{campaignId} {
      // Tüm kullanıcılar aktif kampanyaları okuyabilir
      // Not: Firestore kuralları WHERE koşullarını zorlamaz,
      // bu yüzden uygulama tarafında isActive==true filtrelemesi yapılmalı
      allow read: if request.auth != null;

      // Sadece adminler yazabilir (genellikle cloud function üzerinden)
      allow create, update: if request.auth != null && request.auth.token.admin == true;
      allow delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Kullanıcıların kapatılan/görülen kampanya ID'leri
    // users/{userId} altındaki closedCampaignIds array'i için kural zaten mevcut

    // =====================================================================
    // COLLECTION GROUP QUERIES
    // =====================================================================
    match /{path=**}/completed_tasks/{taskId} {
      // Kullanıcının kendi tamamladığı görevleri okumasına izin ver.
      allow read: if request.auth.uid == resource.data.userId;
    }

    match /{path=**}/blocked_users/{blockedUserId} {
      // Kullanıcının kendi engellediklerini collection group query ile okuyabilir
      allow read: if request.auth != null;
    }
  }
}
