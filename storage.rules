rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Blog kapak görselleri herkes tarafından okunabilir, sadece admin yükleyebilir/silebilir
    match /blog_covers/{postSlug}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Bildirim banner görselleri (FCM tarafı resmi çekebilmek için public read gerekir)
    match /push_banners/{year}/{month}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Varsayılan: diğer tüm yollar için erişim yok (güvenli varsayılan)
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
